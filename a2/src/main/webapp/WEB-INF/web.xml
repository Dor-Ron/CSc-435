<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

     <servlet>
      <servlet-name>IndexRoute</servlet-name>
      <servlet-class>csc435.moocme.a2.IndexServlet</servlet-class>
   </servlet>
 
    <servlet>
      <servlet-name>SearchRoute</servlet-name>
      <servlet-class>csc435.moocme.a2.SearchServlet</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>AboutRoute</servlet-name>
      <servlet-class>csc435.moocme.a2.AboutServlet</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>CourseRoute</servlet-name>
      <servlet-class>csc435.moocme.a2.CourseServlet</servlet-class>
   </servlet>

   <!-- Note: All <servlet> elements MUST be grouped together and
         placed IN FRONT of the <servlet-mapping> elements -->
 
   <servlet-mapping>
      <servlet-name>IndexRoute</servlet-name>
      <url-pattern>/</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>SearchRoute</servlet-name>
      <url-pattern>/search</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>AboutRoute</servlet-name>
      <url-pattern>/about</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>CourseRoute</servlet-name>
      <url-pattern>/courses/*</url-pattern>
   </servlet-mapping>
</web-app>

